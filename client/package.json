{
  "name": "simple-task-manager",
  "version": "1.4.2",
  "scripts": {
    "ng": "ng",
    "dev": "ng serve --watch",
    "dev-ja": "ng serve --watch --configuration=ja",
    "dev-de": "ng serve --watch --configuration=de",
    "dev-zh": "ng serve --watch --configuration=zh-CN",
    "dev-fr": "ng serve --watch --configuration=fr",
    "dev-local": "ng serve --watch -c local",
    "build": "ng build -c production --localize",
    "test": "ng test --source-map --watch=true --browsers=HeadlessFirefox --code-coverage",
    "test-chrome": "ng test --source-map --watch=true --browsers=ChromeHeadlessNoSandbox --code-coverage",
    "lint": "ng lint --fix",
    "i18n": "ng extract-i18n --output-path src/locale",
    "update": "npx npm-check-updates -u && npm install"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^13.1.1",
    "@angular/compiler": "^13.1.1",
    "@angular/core": "^13.1.1",
    "@angular/forms": "^13.1.1",
    "@angular/localize": "^13.1.1",
    "@angular/platform-browser": "^13.1.1",
    "@angular/platform-browser-dynamic": "^13.1.1",
    "@angular/router": "^13.1.1",
    "@turf/hex-grid": "^6.5.0",
    "@turf/square-grid": "^6.5.0",
    "@turf/triangle-grid": "^6.5.0",
    "ol": "^6.12.0",
    "rxjs": "^7.5.2",
    "tslib": "^2.3.1",
    "zone.js": "^0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^13.1.1",
    "@angular/cli": "^13.1.1",
    "@angular/compiler-cli": "^13.1.1",
    "@types/jasmine": "^3.10.3",
    "codelyzer": "^6.0.2",
    "jasmine-core": "^4.0.0",
    "jasmine-spec-reporter": "^7.0.0",
    "karma": "^6.3.14",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.1.0",
    "karma-firefox-launcher": "^2.1.2",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-html-reporter": "^1.7.0",
    "protractor": "^7.0.0",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "~4.5.4"
  }
}
